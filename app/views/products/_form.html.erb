<div class="container">
    <%= form_with( model: product ) do |form| %>
        <% @product.errors.full_messages.each do |error| %>
            <div>
                <%= error %>
            </div>
        <% end %>

        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :price %>
            <%= form.number_field :price, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :sku %>
            <%= form.number_field :sku, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :is_seasonal %>
            <%= form.select :is_seasonal, [["True", "1"], ["False", "0"]], class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :image %>
            <%= form.file_field :image %>
        </div>

        <div class="form-group">
            <%= form.label :quantity %>
            <%= form.text_field :quantity, value: "#{@selected.present? ? @selected[0].strip : ""}", required: true %>
            <%= form.select :type, [["GMS", "gms"], ["KG", "kg"], ["PIECE", "piece"]], selected: "#{@selected.present? ? @selected[1].strip : ""}", class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :category %>
            <%= form.select :category, [["Vegetables", "vegetables"], ["Fruits", "fruits"]], class: "form-control" %>
        </div>

        <br>

        <%= form.submit "Guardar", class: "btn-submit" %>
        
    <% end %>
</div>