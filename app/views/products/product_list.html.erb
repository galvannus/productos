<section class="sec">
    <div class="products">
    <% @products.each do |product|%>
            <!-- Card start -->
            <div class="card">
                <div class="img"><%= image_tag product.image %></div>
                <div class="desc"><%= product.category %></div>
                <div class="title"><%= product.name.upcase %></div>
                <div class="box">
                    <div class="price">$<%= product.price %></div>
                    <button class="btn">Buy Now</button>
                </div>
            </div>
            <!-- Card end -->
    <% end %>
    </div>
</section>